{
    "name": "devadze/laravel-flitt-payment",
    "description": "A Laravel package for Flitt Payment API integration",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Devadze\\FlittPayment\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Gio Devadze",
            "email": "giodevadze01@gmail.com"
        }
